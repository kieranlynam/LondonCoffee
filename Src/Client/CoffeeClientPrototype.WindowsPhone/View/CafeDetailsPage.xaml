<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:CoffeeClientPrototype.Converters"
    xmlns:controls="using:Callisto.Controls"
    xmlns:appBar="using:CoffeeClientPrototype.AppBar"
    x:Class="CoffeeClientPrototype.View.CafeDetailsPage"
    Background="{StaticResource PageBackground}"
    FontSize="20"
    CharacterSpacing="50" 
    mc:Ignorable="d">

    <Page.DataContext>
        <Binding Mode="OneWay" Path="Details" Source="{StaticResource Locator}"/>
    </Page.DataContext>

    <Page.Resources>
        <converters:StringFormatConverter x:Key="StringFormatConverter"/>
    	<converters:VotesCountToTextConverter x:Key="VotesCountToTextConverter"/>
    	<converters:TextToUpperConverter x:Key="TextToUpperConverter"/>
        <DataTemplate x:Key="PivotTitleTemplate">
        	<Grid>
                <TextBlock Text="{Binding Converter={StaticResource TextToUpperConverter}}" Foreground="{StaticResource PrimaryForecolour}" FontFamily="Tw Cen MT Condensed" FontSize="27" CharacterSpacing="70" />
        	</Grid>
        </DataTemplate>
        <DataTemplate x:Key="PivotHeaderTemplate">
        	<Grid Margin="0,10,0,0">
        		<TextBlock Text="{Binding}" Foreground="{StaticResource PrimaryForecolour}" FontFamily="Tw Cen MT Condensed" FontSize="27" CharacterSpacing="50" />
        	</Grid>
        </DataTemplate>
        <DataTemplate x:Key="ReviewDataTemplate">
        	<Grid Margin="0,0,0,4">
        		<Grid.ColumnDefinitions>
        			<ColumnDefinition Width="55"/>
        			<ColumnDefinition/>
        		</Grid.ColumnDefinitions>
                <Rectangle
                    HorizontalAlignment="Left"
                    Width="45"
                    Height="45"
                    Fill="Navy"
                    Grid.Column="0" />
	            <TextBlock
                    FontFamily="Tw Cen MT Condensed"
                    FontSize="16"
                    TextWrapping="Wrap"
                    Text="{Binding Comment}"
                    VerticalAlignment="Top"
                    Grid.Column="1" />
        	</Grid>
        </DataTemplate>
        <DataTemplate x:Key="ReviewListHeaderTemplate">
            <Grid Margin="0,0,0,8">
                <TextBlock Text="{Binding}" />
            </Grid>
        </DataTemplate>
    </Page.Resources>
    
	<Grid>
		<Pivot
            x:Name="Pivot"
			Title="{Binding Name}"
			Foreground="{StaticResource PrimaryForecolour}"
			TitleTemplate="{StaticResource PivotTitleTemplate}"
			HeaderTemplate="{StaticResource PivotHeaderTemplate}"
            PivotItemLoading="OnPivotItemLoading">
            
			<PivotItem
                x:Name="Details"
                Header="details"
                Background="White" Margin="21,23,17,-0.333">

                <Grid Margin="12,12,12,0">
                	<Grid.RowDefinitions>
                		<RowDefinition Height="Auto"/>
                		<RowDefinition/>
                	</Grid.RowDefinitions>
                 
                    <StackPanel Orientation="Vertical">
						
                        <!-- Address -->
                        <TextBlock
                            Text="{Binding Address, Mode=OneWay}"
                            Margin="0,0,0,12" />

                        <!-- Number Of Votes -->
                        <TextBlock
                            Text="{Binding NumberOfVotes, Converter={StaticResource VotesCountToTextConverter}, Mode=OneWay}"
                            Margin="0,0,0,12" />

                        <!-- Ratings -->
                        <Grid Height="80">
							<Grid.RowDefinitions>
								<RowDefinition/>
								<RowDefinition/>
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto"/>
								<ColumnDefinition/>
							</Grid.ColumnDefinitions>
							
                            <TextBlock
                                Text="Coffee"
                                Margin="0,0,12,0" />
                            <controls:Rating
                                Grid.Column="1"
                                Grid.Row="0"
                                Margin="0,-5,0,0"
                                Tag="💧"
                                ReadOnlyFill="{StaticResource PrimaryForecolour}"
                                ItemCount="5"
                                IsEnabled="False"
                                Value="{Binding CoffeeRating}"
                                SelectionMode="Continuous" />
							
                            <TextBlock 
                                Text="Atmosphere"
                                Margin="0,0,12,0"
                                Grid.Column="0"
                                Grid.Row="1" />
                            <controls:Rating
                                Grid.Column="1"
                                Grid.Row="1"
                                Margin="0,-5,0,0"
                                Tag="💧"
                                ReadOnlyFill="{StaticResource PrimaryForecolour}"
                                ItemCount="5"
                                IsEnabled="False"
                                Value="{Binding AtmosphereRating}"
                                SelectionMode="Continuous" />
                        </Grid>
                    </StackPanel>
                 
                    <!-- Reviews -->
                    <ListView
                		ItemsSource="{Binding Reviews}"
						ItemTemplate="{StaticResource ReviewDataTemplate}"
						Grid.Row="1" Header="{Binding Reviews.Count, ConverterParameter=\{0\} reviews, Converter={StaticResource StringFormatConverter}, Mode=OneWay}" HeaderTemplate="{StaticResource ReviewListHeaderTemplate}"/>
                </Grid>
			</PivotItem>
			<PivotItem
                x:Name="Pictures"
                Header="pictures">
				<Grid Margin="0,0,361.667,429.167"/>
			</PivotItem>
            <PivotItem
                x:Name="Rate"
                Header="rate">
                <Grid Background="White" >
                	<StackPanel
						Orientation="Vertical"
                        Margin="12,12,12,12"
                        DataContext="{Binding CurrentIdentityReview, Mode=OneWay}">

                        <!-- Ratings -->
                        <Grid Height="100">
                			<Grid.RowDefinitions>
                				<RowDefinition/>
                				<RowDefinition/>
                			</Grid.RowDefinitions>
                			<Grid.ColumnDefinitions>
                				<ColumnDefinition Width="Auto"/>
                				<ColumnDefinition/>
                			</Grid.ColumnDefinitions>
                			
                            <TextBlock 
								Text="Coffee"
								VerticalAlignment="Top"/>
                            <controls:Rating
                                Grid.Column="1"
                                Grid.Row="0"
                                Margin="0,-5,0,0"
                                Tag="💧"
                                Foreground="{StaticResource PrimaryForecolour}"
                                PointerPressedFill="{StaticResource PhoneAccentBrush}"
                                PointerOverFill="{StaticResource PhoneAccentBrush}"
                                ItemCount="5"
                                Value="{Binding CoffeeRating, Mode=TwoWay}"
                                SelectionMode="Continuous" />
                            
                            <TextBlock
								Text="Atmosphere"
                                Grid.Column="0"
								Grid.Row="1"/>
                            <controls:Rating
                                Grid.Column="1"
                                Grid.Row="1"
                                Margin="0,-5,0,0"
                                Tag="💧"
                                Foreground="{StaticResource PrimaryForecolour}"
                                PointerPressedFill="{StaticResource PhoneAccentBrush}"
                                PointerOverFill="{StaticResource PhoneAccentBrush}"
                                ItemCount="5"
                                Value="{Binding AtmosphereRating, Mode=TwoWay}"
                                SelectionMode="Continuous" />
                        </Grid>

                        <!-- Review -->
                		<TextBlock
                            TextWrapping="Wrap"
                            Text="Review"/>
                		<Border
                			VerticalAlignment="Top"
                			Height="100"
                			Background="{StaticResource PageBackground}" >
                			<TextBox
                				TextWrapping="Wrap"
                				Text="{Binding Comment, Mode=TwoWay}"
                				PlaceholderText="How did you like this cafe?"
							Height="100" Margin="0,0,-0.5,0" />
                		</Border>
	                </StackPanel>
                </Grid>
            </PivotItem>
		</Pivot>
	</Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <appBar:PivotItemAppBarButton
                Icon="map"
                Label="map"
                PivotItem="Details"
                Command="{Binding ShowMap}"/>
            <appBar:PivotItemAppBarButton
                Icon="add"
                Label="add"
                Visibility="Collapsed"
                PivotItem="Pictures" />
            <appBar:PivotItemAppBarButton
                Icon="accept"
                Label="submit"
                Visibility="Collapsed"
                PivotItem="Rate"
                Command="{Binding CurrentIdentityReview.Submit, Mode=OneWay}"/>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
